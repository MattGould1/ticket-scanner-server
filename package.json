{
  "name": "ticket-scanner-server",
  "version": "0.0.1",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "bin": "dist/src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/MattGould1/ticker-scanner-server"
  },
  "keywords": [
    "server"
  ],
  "author": "Matthew Gould <matt@saowapan.com>",
  "license": "MIT",
  "scripts": {
    "bundle": "rimraf dist && esbuild --outdir=dist --sourcemap --bundle --platform=node --target=node23.0.0 ./src/index.ts  && mkdir -p ./dist && cp ./src/graphql/schema.graphql ./dist/",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dev": "nodemon --watch src --watch test --ext ts,json --exec 'yarn bundle && yarn start'",
    "debug": "yarn bundle && node --enable-source-maps --inspect-brk ./dist/index.js",
    "debug:test": "node --inspect-brk ./node_modules/.bin/jest --runInBand .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "start": "node --enable-source-maps ./dist/index.js",
    "test": "jest --runInBand .",
    "generate": "graphql-codegen"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@faker-js/faker": "^9.4.0",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-resolvers": "^4.4.1",
    "@jest/globals": "29.7.0",
    "@tsconfig/node20": "20.1.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "^9",
    "@types/koa": "^2",
    "@types/koa-bodyparser": "^4",
    "@types/koa-mount": "^4",
    "@types/koa__cors": "^5",
    "@types/koa__router": "^12.0.4",
    "@types/node": "20.17.12",
    "@types/ws": "^8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "esbuild": "0.21.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "rimraf": "5.0.10",
    "typescript": "5.7.2"
  },
  "packageManager": "yarn@4.2.2",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.16",
    "@graphql-tools/utils": "^10.7.2",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "graphql-tag": "^2.12.6",
    "graphql-yoga": "^5.10.11",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-graphql": "^0.12.0",
    "koa-jwt": "^4.0.4",
    "koa-mount": "^4.0.0",
    "mongodb": "6.12.0",
    "mongoose": "8.9.5"
  }
}
